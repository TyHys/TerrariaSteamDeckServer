# TerrariaSteamDeckServer Environment Configuration
# Copy this file to .env and customize as needed

#---------------------------------------------------------------
# World Settings
#---------------------------------------------------------------

# Name of the world (without .wld extension)
WORLD_NAME=world

# World size for auto-created worlds
# Options: 1 (Small), 2 (Medium), 3 (Large)
WORLD_SIZE=2

# World difficulty for auto-created worlds
# Options: 0 (Normal), 1 (Expert), 2 (Master), 3 (Journey)
DIFFICULTY=0

# Auto-create world if it doesn't exist
# Options: 0 (off), 1 (small), 2 (medium), 3 (large)
AUTOCREATE=2

#---------------------------------------------------------------
# Server Settings
#---------------------------------------------------------------

# Maximum number of concurrent players
MAX_PLAYERS=8

# Server port (default: 7777)
SERVER_PORT=7777

# Server password (leave empty for no password)
SERVER_PASSWORD=

# Message of the Day
MOTD=Welcome to the Terraria Server!

#---------------------------------------------------------------
# Security Settings
#---------------------------------------------------------------

# Anti-cheat protection
# Options: 0 (disabled), 1 (enabled)
SECURE=1

# Server language
LANGUAGE=en-US

#---------------------------------------------------------------
# Process Management Settings
#---------------------------------------------------------------

# Initial delay before restarting after crash (seconds)
RESTART_DELAY=5

# Maximum delay between restart attempts (seconds)
RESTART_DELAY_MAX=60

# Multiplier for exponential backoff on repeated crashes
RESTART_DELAY_MULTIPLIER=2
